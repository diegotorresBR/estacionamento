<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#829ebc" 
                android:endColor="#476899"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#476899" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

<item>
    <shape>
        <corners
        android:radius="@dimen/activity_vertical_margin" />
        <gradient
            android:angle="90"
            android:startColor="#476899"
            android:centerColor="#5a7da6"
            android:endColor="#829ebc"
            android:type="linear" />
    </shape>
</item>
</selector>